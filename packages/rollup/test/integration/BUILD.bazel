load("@build_bazel_rules_nodejs//:index.bzl", "generated_file_test")
load("//packages/rollup:index.bzl", "rollup_bundle")

_BUNDLE_FORMATS = [
    "amd",
    "cjs",
    "esm",
    "iife",
    "umd",
    "system",
]

[
    rollup_bundle(
        name = "bundle.%s" % format,
        srcs = [
            "bar.js",
            "some.json",
            "//%s/foo:user.js" % package_name(),
        ],
        config_file = "rollup.config.js",
        entry_point = "foo.js",
        format = format,
        sourcemap = "true",
        supports_workers = True,
        deps = [
            "//%s/fum:fumlib" % package_name(),
            "//%s/foo:foo_lib" % package_name(),
            "//%s/foo_a:foo_lib_a" % package_name(),
            "//%s/foo_aaa:foo_lib_a_a_a" % package_name(),
            "//%s/far/a/b/c" % package_name(),
            "//%s/far/a" % package_name(),
            "@npm//@rollup/plugin-commonjs",
            "@npm//@rollup/plugin-json",
            "@npm//@rollup/plugin-node-resolve",
            "@npm//hello",
        ],
    )
    for format in _BUNDLE_FORMATS
]

# Verify the bundle .js files
[
    generated_file_test(
        name = "test_%s" % format,
        src = "//%s:golden.%s.js_" % (
            package_name(),
            format,
        ),
        generated = "bundle.%s.js" % format,
    )
    for format in _BUNDLE_FORMATS
]

[
    generated_file_test(
        name = "test_%s_map" % format,
        src = "//%s:golden.%s.js.map_" % (
            package_name(),
            format,
        ),
        generated = ":bundle.%s.js.map" % format,
    )
    for format in _BUNDLE_FORMATS
]
